<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>


    <!-- Button style -->
    <style name="BaseButton">
        <item name="android:layout_width">@dimen/button_dimensions</item>
        <item name="android:layout_height">@dimen/button_dimensions</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- Number style -->
    <style name="NumberStyle" parent="BaseButton">
        <item name="android:background">@color/colorButtonBackground</item>
    </style>

    <!-- Zero style -->
    <style name="ZeroStyle" parent="NumberStyle">
        <item name="android:layout_width">@dimen/zero_button_width</item>
    </style>

    <!-- Operator style -->
    <style name="OperatorStyle" parent="NumberStyle">
        <item name="android:background">@color/colorOperatorBackground</item>
    </style>


    <!-- Clear style -->
    <style name="ClearStyle" parent="NumberStyle">
        <item name="android:background">@color/colorClearBackground</item>
    </style>

    <!-- Equals style -->
    <style name="EqualsStyle" parent="NumberStyle">
        <item name="android:background">@color/colorEqualsBackground</item>
        <item name="android:layout_width">@dimen/equals_button_width</item>
    </style>


    <!-- Display style -->
    <style name="DisplayStyle">
        <item name="android:textColor">@color/colorDisplayText</item>
        <item name="android:paddingTop">@dimen/display_padding</item>
        <item name="android:paddingBottom">@dimen/display_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/display_text_size</item>
        <item name="android:maxLength">@integer/display_max_length</item>
        <item name="android:textStyle">bold</item>
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@color/colorDisplayBackground</item>
    </style>


</resources>
